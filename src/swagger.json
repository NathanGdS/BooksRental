{
  "openapi": "3.0.2",
  "info": {
    "title": "LibraryAPI Documentation",
    "description": "This is an API for books rentals",
    "version": "1.0.0",
    "contact": {
      "name": "Nathan Santos",
      "email":"nathangarsantos@gmail.com"
    }
},
  "paths": {
    "/genres": {
      "get": {
        "tags": ["Genres"],
        "summary": "Return genres",
        "description": "Return all genres with all the books and authors in the genres",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema":{
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "string"
                      },
                      "books": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "string"
                            },
                            "created_at": {
                              "type": "string"
                            },
                            "title": {
                              "type": "string"
                            },
                            "description": {
                              "type": "string"
                            },
                            "date_release": {
                              "type": "string"
                            },
                            "genre_id": {
                              "type": "string"
                            },
                            "authors": {
                              "type": "array",
                              "items": {
                                "type": "object",
                                "properties": {
                                  "id": {
                                    "type": "string"
                                  },
                                  "created_at": {
                                    "type": "string"
                                  },
                                  "alive": {
                                    "type": "boolean"
                                  },
                                  "name": {
                                    "type": "string"
                                  },
                                  "nationality": {
                                    "type": "string"
                                  },
                                  "age": {
                                    "type": "number"
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Genres"],
        "summary": "Create Genre",
        "description": "Create a new Genre",
        "requestBody":{
          "content": {
            "application/json": {
              "schema":{
                "type": "string",
                "properties": {
                  "description":{
                    "type": "string"
                  }
                }
              },
              "example": {
                "description": "Fiction"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Genre Created",
            "content": {
              "application/json": {
                "schema":{
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Genre already exists!",
              "content": {
                  "application/json": {
                      "schema": {
                          "type": "object",
                          "properties": {
                              "error": {
                                  "type": "string"
                              }
                          },
                          "example": {
                              "error": "Genre already exists!"
                          }
                      }
                  }
              }
          }
        }
      }
    },
    "/authors":{
      "post": {
        "tags": ["Authors"],
        "summary": "Create Author",
        "description": "Create a new Author",
        "requestBody":{
          "content": {
            "application/json": {
              "schema":{
                "type": "string",
                "properties": {
                  "name":{
                    "type": "string"
                  },
                  "age":{
                    "type": "number"
                  },
                  "nationality":{
                    "type": "string"
                  },
                  "alive":{
                    "type": "boolean"
                  }
                }
              },
              "example": {
                "name": "Frank Patrick Herbert",
                "age": 65,
                "nationality": "North American",
                "alive": false
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema":{
                  "type": "object",
                  "properties": {
                    "id":{
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "nationality":{
                      "type": "string"
                    },
                    "age": {
                      "type": "number"
                    },
                    "alive":{
                      "type": "boolean"
                    },
                    "created_at":{
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Author already exists!",
              "content": {
                  "application/json": {
                      "schema": {
                          "type": "object",
                          "properties": {
                              "error": {
                                  "type": "string"
                              }
                          },
                          "example": {
                              "error": "Author already exists!"
                          }
                      }
                  }
              }
          }
        }
      },
      "get": {
        "tags": ["Authors"],
        "summary": "Show Authors",
        "description": "Show All Authors",
        "responses": {
          "200":{
            "description": "Success",
            "content": {
              "application/json":{
                "schema":{
                  "type": "array",
                  "items":{
                    "type": "object",
                    "properties": {
                      "id":{
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "nationality":{
                        "type": "string"
                      },
                      "age": {
                        "type": "number"
                      },
                      "alive":{
                        "type": "boolean"
                      },
                      "created_at":{
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}